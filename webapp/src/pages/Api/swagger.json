{
  "swagger": "2.0",
  "info": {
    "title": "LinkedSDGs API",
    "description": "This API automatically extracts key concepts related to sustainable development from submitted text documents and links them to the most relevant sustainable development goals, targets, indicators and series. \n\nThe SDG taxonomy, used by the API, is available at http://metadata.un.org/sdg. \n\nFor more technical background please consult https://github.com/UNStats/LOD4Stats/wiki."
  },
  "hostRemote": "linkedsdg.apps.officialstatistics.org",
  "host": "localhost:5003",
  "basePath": "",
  "contact": {
    "email": "joshi6@un.org"
  },
  "tags": [
    {
      "name": "LinkedSDGs API"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/url": {
      "post": {
        "tags": [
          "LinkedSDGs API"
        ],
        "summary": "For submitting documents via URLs",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "URL",
            "in": "body",
            "description": "Document URL",
            "required": true,
            "schema": {
              "$ref": "#/definitions/url"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request Error"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/file": {
      "post": {
        "tags": [
          "LinkedSDGs API"
        ],
        "summary": "For submitting documents in files",
        "description": "",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "file",
            "type": "file",
            "required": "true",
            "description": "The file to upload."
          },
          {
            "in": "formData",
            "name": "options",
            "type": "object", 
            "value": "{\n  \"geoAreas\": true,\n  \"concepts\": true,\n  \"sdgs\": true,\n  \"text\": true\n}",
            "properties": {
              "geoAreas": {
                "type": "boolean"
              },
              "concepts": {
                "type": "boolean"
              },
              "sdgs": {
                "type": "boolean"
              },
              "text": {
                "type": "boolean"
              }
            },
            "required": "false"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request Error"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "url": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "example": "https://www.ncbi.nlm.nih.gov/pmc/articles/PMC3657896/"
        },
        "geoAreas": {
          "type": "boolean"
        },
        "concepts": {
          "type": "boolean"
        },
        "sdgs": {
          "type": "boolean"
        },
        "text": {
          "type": "boolean"
        }
      }
    },
    "file": {
      "type": "object",
      "properties":  [
        {
          "in": "formData",
          "name": "file",
          "type": "file",
          "required": "true",
          "description": "The file to upload."
        },
        {
          "in": "formData",
          "name": "options",
          "type": "object", 
          "value": "{\n  \"geoAreas\": true,\n  \"concepts\": true,\n  \"sdgs\": true,\n  \"text\": true\n}",
          "properties": {
            "geoAreas": {
              "type": "boolean"
            },
            "concepts": {
              "type": "boolean"
            },
            "sdgs": {
              "type": "boolean"
            },
            "text": {
              "type": "boolean"
            }
          },
          "required": "false"
        }
      ]
    }
  }
}